<Page x:Class="UnoCostAnalyzer.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoCostAnalyzer.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
  <ScrollViewer>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>
      <utu:NavigationBar Content="{Binding Title}" />

      <StackPanel Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Spacing="16">
            <ListView ItemsSource="{Binding CostItems.Items}">
<ListView.ItemTemplate>
    <DataTemplate>
        <Grid>
          <Button>
            <StackPanel>
              <TextBlock FontSize="10" Text="{Binding Description}"/>
              <TextBlock FontSize="10" Text="{Binding Cost}"/>
              <TextBlock FontSize="5" Text="{Binding CreatedAt}"/>
            </StackPanel>
          </Button>
        </Grid>
    </DataTemplate>
</ListView.ItemTemplate>
</ListView>
        <TextBox Text="{Binding Name, Mode=TwoWay}"
            PlaceholderText="Enter your name:" />
        <Button Content="Go to Second Page"
            AutomationProperties.AutomationId="SecondPageButton"
            Command="{Binding GoToSecond}" />
        <Button Command="{Binding AddItemTest}" Content="Test dodaj" />
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Page>
